#!/usr/bin/tclsh
set PRJ_DIR $env(PRJ_DIR)
source ${PRJ_DIR}/design/design_conf/design_def.tcl
set fp [open "strmin_template" w]
puts $fp "#dbuPerUU                          \"0\""
puts $fp "#hierDepth                         \"32767\""
puts $fp "#maxCellsInTargetLib               \"20000\""
puts $fp "#numThreads                        \"1\""
puts $fp "#strmTextNS                        \"cdba\""
puts $fp "#append"
puts $fp "#arrayInstToScalar"
puts $fp "attachTechFileOfLib                \"${virtuoso_techno_lib}\""
puts $fp "case                               \"preserve\""
puts $fp "#cellMap                           \"\""
puts $fp "#checkPolygon"
puts $fp "#convertPathToPathSeg"
puts $fp "#detectVias"
puts $fp "#disableLocking"
puts $fp "excludeMapToVia                    \"\""
puts $fp "fontMap                            \"\""
puts $fp "#ignoreBoxes"
puts $fp "#ignoreZeroWidthPath"
puts $fp "#keepStreamCells"
puts $fp "labelCase                          \"preserve\""
puts $fp "layerMap                           \"\""
puts $fp "library                            \"${TOP_MODULE}_lib\""
puts $fp "loadTechFile                       \"\""
puts $fp "logFile                            \"${TOP_MODULE}_strmin.log\""
puts $fp "#mergeUndefPurposToDrawing"
puts $fp "noInfo                             \"\""
puts $fp "#noOverwriteCell"
puts $fp "noWarn                             \"75 107 31 198 298\""
puts $fp "objectMap                          \"\""
puts $fp "pinAttNum                          \"0\""
puts $fp "propMap                            \"\""
puts $fp "propSeparator                      \",\""
puts $fp "refLibList                         \"strmin_reflibs_list\""
puts $fp "#replaceBusBitChar"
puts $fp "#reportPrecisionLoss"
puts $fp "runDir                             \".\""
puts $fp "scale                              \"1.00000\""
puts $fp "scaleTextHeight                    \"1.00000\""
puts $fp "#skipUndefinedLPP"
puts $fp "#snapToGrid"
puts $fp "strmFile                           \"${PR_DIR}/results/${TOP_MODULE}.gds\""
puts $fp "strmTechGen                        \"\""
puts $fp "summaryFile                        \"\""
puts $fp "techRefs                           \"\""
puts $fp "topCell                            \"${TOP_MODULE}\""
puts $fp "#translateNode"
puts $fp "userSkillFile                      \"\""
puts $fp "viaMap                             \"\""
puts $fp "view                               \"layout\""
puts $fp "warnToErr                          \"\""
puts $fp "#wildCardInCellMap"
